#exec_always --no-startup-id nitrogen --restore
# Night shift
exec_always --no-startup-id redshift -l $(curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" | jq -r '"\(.location.lat):\(.location.lng)"')

